<h1>Jungle - All Categories</h1>

<div class="well well-sm">
    <%= link_to 'Create A New Category', [:new, :admin, :category], class: 'btn btn-default' %>
</div>

 <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2" class="info text-center status">Categories</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |item| %>
          <%= render 'category', category: item[:name] %>
        <% end %>
      </tbody>
</table>