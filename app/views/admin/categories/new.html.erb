<section class="admin-category-new">

  <header class="page-header">
    <h1>Create A New Category</h1>
  </header>

  <div class="well well-sm">
    <%= link_to 'All Categories', [:admin, :categories], class: 'btn btn-default' %>
  </div>

    <div class="row">
    <div class="col-sm-4 col-sm-offset-0">
      <%= form_for [:admin, @category] do |form| %>
        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>Errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <%= form.submit 'Create The Category', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>

</section>